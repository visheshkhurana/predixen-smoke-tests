{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "task_id",
    "verdict",
    "math_operations_found",
    "findings"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "verdict": {
      "type": "string",
      "enum": [
        "PASS",
        "FAIL",
        "NEEDS_REVIEW"
      ]
    },
    "math_operations_found": {
      "type": "integer"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "severity",
          "file",
          "description"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low",
              "info"
            ]
          },
          "file": {
            "type": "string"
          },
          "line": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": [
              "precision",
              "division_by_zero",
              "hardcoded_value",
              "edge_case",
              "formula_error",
              "type_mismatch"
            ]
          }
        }
      }
    },
    "hardcoded_values": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string"
          },
          "line": {
            "type": "integer"
          },
          "value": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "maxLength": 300
    }
  }
}