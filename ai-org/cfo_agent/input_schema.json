{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "request_id",
    "analysis_type",
    "financial_data"
  ],
  "properties": {
    "request_id": {
      "type": "string"
    },
    "analysis_type": {
      "type": "string",
      "enum": [
        "budget_review",
        "revenue_forecast",
        "cost_analysis",
        "investment_eval"
      ]
    },
    "financial_data": {
      "type": "object"
    },
    "time_horizon": {
      "type": "string",
      "enum": [
        "monthly",
        "quarterly",
        "annual"
      ]
    }
  }
}