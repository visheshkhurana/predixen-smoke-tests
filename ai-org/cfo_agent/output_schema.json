{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "request_id",
    "recommendation",
    "metrics",
    "risk_flags"
  ],
  "properties": {
    "request_id": {
      "type": "string"
    },
    "recommendation": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string"
        },
        "confidence": {
          "type": "number"
        }
      }
    },
    "metrics": {
      "type": "object"
    },
    "risk_flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}