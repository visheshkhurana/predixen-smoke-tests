{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "decision_id",
    "selected_option_id",
    "rationale",
    "requires_founder_approval",
    "timestamp"
  ],
  "properties": {
    "decision_id": {
      "type": "string",
      "format": "uuid"
    },
    "selected_option_id": {
      "type": "string"
    },
    "rationale": {
      "type": "string",
      "maxLength": 500
    },
    "requires_founder_approval": {
      "type": "boolean"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}