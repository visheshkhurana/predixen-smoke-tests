{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "decision_id",
    "decision_type",
    "options",
    "risk_assessment"
  ],
  "properties": {
    "decision_id": {
      "type": "string",
      "format": "uuid"
    },
    "decision_type": {
      "type": "string",
      "enum": [
        "strategic",
        "operational",
        "financial",
        "product",
        "technical"
      ]
    },
    "options": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "option_id",
          "label",
          "source_agent",
          "metrics"
        ],
        "properties": {
          "option_id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "source_agent": {
            "type": "string"
          },
          "metrics": {
            "type": "object"
          }
        }
      }
    },
    "risk_assessment": {
      "type": "object",
      "required": [
        "risk_level",
        "flags"
      ],
      "properties": {
        "risk_level": {
          "type": "string",
          "enum": [
            "LOW",
            "MEDIUM",
            "HIGH",
            "CRITICAL"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}