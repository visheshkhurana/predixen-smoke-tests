{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "request_id",
    "risk_level",
    "flags",
    "requires_approval"
  ],
  "properties": {
    "request_id": {
      "type": "string"
    },
    "risk_level": {
      "type": "string",
      "enum": [
        "LOW",
        "MEDIUM",
        "HIGH",
        "CRITICAL"
      ]
    },
    "flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requires_approval": {
      "type": "boolean"
    },
    "mitigation_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}