{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "review_id",
    "verdict",
    "findings"
  ],
  "properties": {
    "review_id": {
      "type": "string"
    },
    "verdict": {
      "type": "string",
      "enum": [
        "PASS",
        "FAIL",
        "NEEDS_CHANGES"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "security_scan": {
      "type": "object"
    },
    "test_coverage": {
      "type": "object"
    }
  }
}