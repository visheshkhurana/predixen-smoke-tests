{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "request_id",
    "verdict",
    "findings"
  ],
  "properties": {
    "request_id": {
      "type": "string"
    },
    "verdict": {
      "type": "string",
      "enum": [
        "APPROVE",
        "REJECT",
        "NEEDS_CHANGES"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "string"
          }
        }
      }
    },
    "security_issues": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}