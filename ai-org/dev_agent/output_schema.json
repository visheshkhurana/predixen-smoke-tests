{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "task_id",
    "changes",
    "tests_included"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file_path": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "create",
              "modify",
              "delete"
            ]
          },
          "content": {
            "type": "string"
          },
          "diff": {
            "type": "string"
          }
        }
      }
    },
    "tests_included": {
      "type": "boolean"
    },
    "test_files": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "blocked_file_attempts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}