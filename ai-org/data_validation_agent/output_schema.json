{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "validation_id",
    "valid",
    "errors"
  ],
  "properties": {
    "validation_id": {
      "type": "string"
    },
    "valid": {
      "type": "boolean"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "error": {
            "type": "string"
          }
        }
      }
    },
    "sanitized_data": {
      "type": "object"
    }
  }
}