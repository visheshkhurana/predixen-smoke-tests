{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "task_id",
    "files",
    "new_dependencies",
    "notes"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "content",
          "action"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "create",
              "modify"
            ]
          }
        }
      }
    },
    "test_files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "new_dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "maxLength": 500
    },
    "blocked_file_violations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}