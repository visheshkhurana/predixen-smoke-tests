{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "request_id",
    "recommendations",
    "priority_matrix"
  ],
  "properties": {
    "request_id": {
      "type": "string"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "feature": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "impact": {
            "type": "number"
          }
        }
      }
    },
    "priority_matrix": {
      "type": "object"
    },
    "risk_flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}