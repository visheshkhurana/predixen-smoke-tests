{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "task_id",
    "verdict",
    "findings",
    "acceptance_criteria_met",
    "security_scan"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "verdict": {
      "type": "string",
      "enum": [
        "PASS",
        "FAIL",
        "NEEDS_CHANGES"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "severity",
          "file",
          "description"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low",
              "info"
            ]
          },
          "file": {
            "type": "string"
          },
          "line": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          }
        }
      }
    },
    "acceptance_criteria_met": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "criterion": {
            "type": "string"
          },
          "met": {
            "type": "boolean"
          },
          "evidence": {
            "type": "string"
          }
        }
      }
    },
    "security_scan": {
      "type": "object",
      "properties": {
        "passed": {
          "type": "boolean"
        },
        "blocked_file_violations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "unscoped_changes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "secrets_found": {
          "type": "boolean"
        },
        "sql_injection_risk": {
          "type": "boolean"
        }
      }
    },
    "summary": {
      "type": "string",
      "maxLength": 300
    }
  }
}