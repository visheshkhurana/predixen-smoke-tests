{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "task_id",
    "description",
    "risk_level",
    "target_files",
    "acceptance_criteria",
    "files_content"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "risk_level": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "target_files": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "files_content": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "action": {
            "type": "string"
          }
        }
      }
    },
    "test_files_content": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}