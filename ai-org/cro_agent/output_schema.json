{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "request_id",
    "strategy",
    "projected_impact",
    "risk_flags"
  ],
  "properties": {
    "request_id": {
      "type": "string"
    },
    "strategy": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string"
        },
        "priority": {
          "type": "string"
        }
      }
    },
    "projected_impact": {
      "type": "object"
    },
    "risk_flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}