{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "task_id",
    "status",
    "result"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "completed",
        "failed",
        "partial"
      ]
    },
    "result": {
      "type": "object"
    },
    "execution_time_ms": {
      "type": "number"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}